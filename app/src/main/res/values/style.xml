<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buttoncolor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryDarkColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>